<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonCreateExercise"
        android:layout_width="290dp"
        android:layout_height="74dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:text="Stwórz ćwiczenie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchSeries" />

    <EditText
        android:id="@+id/editTextExerciseName"
        android:layout_width="291dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:text="Nazwa ćwiczenia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Wybierz partię mięśniową"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextExerciseName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Wybierz sposoby pomiaru ćwiczenia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerMusclePartList" />

    <Switch
        android:id="@+id/switchDistance"
        android:layout_width="124dp"
        android:layout_height="31dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:text="Dystans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Switch
        android:id="@+id/switchReps"
        android:layout_width="127dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Powtórzenia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchDutarion" />

    <Switch
        android:id="@+id/switchDutarion"
        android:layout_width="123dp"
        android:layout_height="33dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="24dp"
        android:text="Czas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchDistance" />

    <Switch
        android:id="@+id/switchWeight"
        android:layout_width="124dp"
        android:layout_height="22dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="24dp"
        android:text="Ciężar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchReps" />

    <Switch
        android:id="@+id/switchSeries"
        android:layout_width="123dp"
        android:layout_height="25dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="24dp"
        android:text="Serie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchWeight" />

    <Spinner
        android:id="@+id/spinnerMusclePartList"
        android:layout_width="321dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/buttonBackCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ekran główny"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>